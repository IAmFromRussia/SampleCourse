@using WebApplication2.Models.Entities
@model Final.Models.ViewModels.ProductViewModels.EditProductViewModel
@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Item</h4>
<hr/>
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name">Enter the Name:</label>
				<input asp-for="Name" class="form-control"/>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SerialNumber">Enter the Serial number (4 digits):</label>
				<input asp-for="SerialNumber" class="form-control"/>
				<span asp-validation-for="SerialNumber" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AssemblyStatus" class="control-label">Select Assembly Status:</label>
				<div class="col-md-10">
					<select asp-for="AssemblyStatus" asp-items="Html.GetEnumSelectList<AssemblyStatus>()">
						<option selected="selected" value="@Model.AssemblyStatus">@Model.AssemblyStatus</option>
					</select>
					<span asp-validation-for="AssemblyStatus" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary"/>
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}